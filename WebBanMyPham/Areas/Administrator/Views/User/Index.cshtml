@model WebBanMyPham.Areas.Administrator.EntityModel.EUser
@{
    Layout = "/Areas/Administrator/Views/Templates/_LayoutPage.cshtml";
}
<div id="jtable-main-container"></div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#jtable-main-container').jtable({
            title: '@ViewBag.Title',
            paging: true, //Enable paging
            pageSize: 20, //Set page size (default: 10)
            sorting: true, //Enable sorting
            selecting: true, //Enable selecting
            multiselect: true, //Allow multiple selecting
            selectingCheckboxes: true, //Show checkboxes on first column
            columnResizable: false, //Actually, no need to set true since it's default
            columnSelectable: true, //Actually, no need to set true since it's default
            saveUserPreferences: false, //Actually, no need to set true since it's default


            actions: {
                listAction: '@Url.Action("List", "User")',
                createAction: '@Url.Action("Create","User")',
                updateAction: '@Url.Action("Edit","User")',
                deleteAction: '@Url.Action("Delete", "User")',
            },
            fields: {
                ID: {
                    key: true,
                    create: false,
                    edit: false,
                    list: false
                },
                UserName: {
                    title: '@Html.DisplayNameFor(c=>c.UserName)',
                    width: '10%',
                    inputClass: 'full-width',
                },
                Password: {
                    title: '@Html.DisplayNameFor(c=>c.Password)',
                    width: '10%',
                    inputClass: 'full-width',
                    list: false,
                    type: 'password'
                },
                FullName: {
                    title: '@Html.DisplayNameFor(c=>c.FullName)',
                    width: '10%',
                    inputClass: 'full-width',
                },

                Email: {
                    title: '@Html.DisplayNameFor(c=>c.Email)',
                    width: '10%',
                    inputClass: 'full-width',
                },

                Status: {
                    title: '@Html.DisplayNameFor(c => c.Status)',
                    width: '8%',
                    type: 'checkbox',
                    values: { 'false': 'No', 'true': 'Yes' },
                    defaultValue: 'true'
                },
                UserContent: {
                    title: '@Html.DisplayNameFor(c => c.UserContent)',
                    width: '8%',
                    type: 'checkbox',
                    values: { 'false': 'No', 'true': 'Yes' },
                    defaultValue: 'true'
                },
                  Role: {
                    title: '@Html.DisplayNameFor(c => c.Role)',
                    width: '8%',
                    options: { '1': 'Admin', '2': 'Quản lý Articles ', '3': 'Quản lý Tour' },
                    defaultValue: '1'
                },
            },
            deleteConfirmation: function (data) {
                data.deleteConfirmMessage = 'Are you sure you want to delete this user ?';
            },

        });
        //Load data
        $('#jtable-main-container').jtable('load');

    });
</script>


