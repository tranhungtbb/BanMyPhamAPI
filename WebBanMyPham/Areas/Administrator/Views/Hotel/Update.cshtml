@model WebBanMyPham.Areas.Administrator.EntityModel.EHotel
@{
    Layout = "~/Areas/Administrator/Views/Templates/_LayoutPage.cshtml";
}
<div class="span12">
    <div class="widget ">
        <div class="widget-header">
            <i class=" icon-plus-sign"></i>
            <h3>@ViewBag.Title</h3>
        </div> <!-- /widget-header -->

        <div class="widget-content">
            @Html.ValidationSummary(true)
            @using (Html.BeginForm("Update", "Hotel", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.HiddenFor(a => a.ID)
                <div class="control-group">
                    <label class="control-label" for="Name">Name<span class="asterisk">*</span></label>
                    <div class="controls">
                        @Html.TextBoxFor(c => c.Name, new { @class = "span4" })
                        @Html.ValidationMessageFor(c => c.Name)
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="Logo">Logo<span class="asterisk">*</span></label>
                    <div class="controls">
                        @Html.TextBoxFor(c => c.Logo, new { @class = "span4 inputbox upload" })
                        @Html.ValidationMessageFor(c => c.Logo)
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="Tel">Tel<span class="asterisk">*</span></label>
                    <div class="controls">
                        @Html.TextBoxFor(c => c.Tel, new { @class = "span4" })
                        @Html.ValidationMessageFor(c => c.Tel)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Tel">Hotline <span class="asterisk">*</span></label>
                    <div class="controls">
                        @Html.TextBoxFor(c => c.Hotline, new { @class = "span4" })
                        @Html.ValidationMessageFor(c => c.Hotline)
                    </div>
                </div>
                
                <div class="control-group">
                    @Html.LabelFor(c => c.Fax, new { @class = "control-label" })
                    <div class="controls">
                        @Html.TextAreaFor(c => c.Fax, new { @class = "span4 meta-seo" })
                        @Html.ValidationMessageFor(p => p.Fax)
                        @*@Html.TextBoxFor(c => c.Fax, new { @class = "span4" })
                        @Html.ValidationMessageFor(c => c.Fax)*@
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="Email">Email <span class="asterisk">*</span></label>
                    <div class="controls">
                        @Html.TextBoxFor(c => c.Email, new { @class = "span4" })
                        @Html.ValidationMessageFor(c => c.Email)
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="Address">Address <span class="asterisk">*</span></label>
                    <div class="controls">
                        @Html.TextBoxFor(c => c.Address, new { @class = "span4" })
                        @Html.ValidationMessageFor(c => c.Address)
                    </div>
                </div>
                
                

                <div class="control-group">
                    @Html.LabelFor(c => c.FaceBook, new { @class = "control-label" })
                    <div class="controls">
                        @Html.TextBoxFor(c => c.FaceBook, new { @class = "span4" })
                        @Html.ValidationMessageFor(c => c.FaceBook)
                    </div>
                </div>
                

                <div class="control-group">
                    @Html.LabelFor(c => c.Twitter, new { @class = "control-label" })
                    <div class="controls">
                        @Html.TextBoxFor(c => c.Twitter, new { @class = "span4" })
                        @Html.ValidationMessageFor(c => c.Twitter)
                    </div>
                </div>

                <div class="control-group">
                    @Html.LabelFor(c => c.Youtube, new { @class = "control-label" })
                    <div class="controls">
                        @Html.TextBoxFor(c => c.Youtube, new { @class = "span4" })
                        @Html.ValidationMessageFor(c => c.Youtube)
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="CopyRight">Copyright<span class="asterisk">*</span></label>
                    <div class="controls">
                        @Html.TextBoxFor(c => c.CopyRight, new { @class = "span4" })
                        @Html.ValidationMessageFor(c => c.CopyRight)
                    </div>
                </div>

                <div class="form-actions">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                    <a href="@Url.Action("Index", "Hotel")" class="btn">Cancel</a>
                </div>

                <div class="control-seo">
                    <h3 class="mg-h">Maximize searching engine (Seo)</h3>
                    <div class="control-group">
                        @Html.LabelFor(c => c.MetaTitle)
                        @Html.TextBoxFor(c => c.MetaTitle, new { @class = "span4" })
                        @Html.ValidationMessageFor(p => p.MetaTitle)
                    </div>

                    <div class="control-group">
                        @Html.LabelFor(c => c.MetaDescription)
                        <div class="jtable-input jtable-text-input">
                            @Html.TextAreaFor(c => c.MetaDescription, new { @class = "span4 meta-seo" })
                            @Html.ValidationMessageFor(p => p.MetaDescription)
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {
        bindUl();
        CreateCkEditor();
    });

</script>