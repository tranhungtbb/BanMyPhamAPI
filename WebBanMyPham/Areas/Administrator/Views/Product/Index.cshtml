@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Templates/_LayoutPage.cshtml";
}

<form action="@Url.Action("UpdateIndex", "ListHotel")" method="POST" id="updateIndex">

    <div class="optionShow">
        <div class="optionShow-title">Lọc tìm kiếm</div>
        <div class="item-option">
            <div class="title-item-option">Loại sản phẩm:</div>
            <div class="content-item-option">@Html.DropDownList("ListMenu")</div>
            <div class="title-item-option">Thương hiệu :</div>
            <div class="content-item-option">@Html.DropDownList("ListCategory")</div>
            <div class="title-item-option">Tìm kiếm :</div>
            <div class="content-item-option">
                <input id="key" />
            </div>
        </div>
    </div>


    <div id="jtable-main-container"></div>
    <script type="text/javascript">
    $(document).ready(function () {
        $('#jtable-main-container').jtable({
            title: '@ViewBag.Title',
            paging: true, //Enable paging
            pageSize: 50, //Set page size (default: 10)
            sorting: true, //Enable sorting
            defaultSorting: 'Name ASC', //Set default sorting
            selecting: true, //Enable selecting
            multiselect: true, //Allow multiple selecting
            selectingCheckboxes: true, //Show checkboxes on first column
            columnResizable: true, //Actually, no need to set true since it's default
            columnSelectable: true, //Actually, no need to set true since it's default
            saveUserPreferences: true, //Actually, no need to set true since it's default
            toolbar: {
                items: [
                    {
                        icon: '/Areas/Administrator/Content/img/add.png',
                        text: 'Add new hotel',
                        click: function() {
                            window.location = '@Url.Action("Create", "Product")';
                        }
                    }, {
                        icon: '/Areas/Administrator/Content/img/Ordering.png',
                        text: 'Sort',
                        click: function() {
                            $("#updateIndex").submit();
                        }
                    }
                ]
            },
            actions: {
                listAction: '@Url.Action("List", "Product")',
                deleteAction: '@Url.Action("Delete", "Product")',
            },
            fields: {
                ID: {
                    key: true,
                    create: false,
                    edit: false,
                    list: false
                },
                ProductName: {
                    title: 'Tên sản phẩm',
                    width: '13%',
                    display: function (data) {
                        return '<a href="/admin/Product/Update/' + data.record.ID + '">' + data.record.ProductName + ' </a>';
                    }
                },

                Image: {
                    title: 'Image',
                    width: '8%',
                    display: function (data) {
                        return '<img src="' + data.record.Image + '" width="60px" height="60px"/>';
                    },
                    inputClass: 'upload'
                },

                Price: {
                    title: 'Gía cơ  bản',
                    width: '8%',
                },

                Status: {
                    title: 'Trạng thái hiện thị',
                    width: '8%',
                    type: 'checkbox',
                    values: { 'false': 'Block', 'true': 'Active' },
                    defaultValue: 'true'
                },
                '':
                {
                    title: '',
                    width: '2%',
                    sorting: false,
                    display: function (data) {
                        return '<button title="Edit" type="button" class="jtable-command-button jtable-edit-command-button" onclick="editRecord(' + data.record.ID + ')"><span>Edit</span></button>';
                    }
                }
            }
        });
            $('#jtable-main-container').jtable('load');
        });
    </script>
</form>


<script>

    @*function editRecord(Id) {
        window.location = '@Url.Action("Update","ListHotel")' + '/' + Id;
    }*@

    $("#ListMenu").change(function () {
        //trường hợp này đã chọn ngôn ngữ và hotel rồi nên hiển thị luôn ra danh sách
        $('#jtable-main-container').jtable('load', { menuId: $("#ListMenu").val() });
    });


    $("#ListCategory").change(function () {
        //trường hợp này đã chọn ngôn ngữ và hotel rồi nên hiển thị luôn ra danh sách
        $('#jtable-main-container').jtable('load', { locationId: $("#ListCategory").val() });
    });

    $("#key").keyup(function () {
        //trường hợp này đã chọn ngôn ngữ và hotel rồi nên hiển thị luôn ra danh sách
        $('#jtable-main-container').jtable('load', { menuId: $("#ListMenu").val(), key: $("#key").val() });
    });

</script>
