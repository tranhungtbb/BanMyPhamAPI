@model Library.DataBase.Customer
@{
    Layout = "~/Areas/Administrator/Views/Templates/_LayoutPage.cshtml";
    var date = Convert.ToDateTime(Model.Birthday);
}
<div class="span12">
    <div class="widget ">
        <div class="widget-header">
            <i class=" icon-info-sign"></i>
            <h3>Chi tiết đặt tour</h3>
            <a href="@Url.Action("Index","Customer")" class="btn btn-primary" style="margin: 5px; float: right;">Quay lại</a>
        </div> <!-- /widget-header -->
        <div class="widget-content">
            <div id="detail-lh">

                <div>
                    <label>Full Name</label> <p>@Model.FullName</p>
                </div>

                <div>
                    <label>Birthday</label> <p>@date.ToString("dd/MM/yyyy")</p>
                </div>

                <div>
                    <label>Email </label> <p>@Model.Email</p>
                </div>

                <div>
                    <label>Address </label> <p>@Model.Address</p>
                </div>

                <div>
                    <label>Phone</label> <p>@Model.Phone</p>
                </div>
                <div>
                    <label>UserName</label> <p>@Model.UserName</p>
                </div>
                <div>
                    <label>Password</label> <p>@Model.Password</p>
                </div>


            </div>
        </div>
    </div>
</div>

<style>
    #detail-lh div {
        border: 1px solid #ddd;
        margin: 0px;
        border-bottom: none;
        display: block;
        width: 100%;
        float: left;
    }

        #detail-lh div:last-child {
            border-bottom: 1px solid #ddd;
        }

        #detail-lh div p {
            width: 69%;
            float: right;
            border-left: 1px solid #ddd;
            padding: 10px 10px;
            margin: 0px;
        }

        #detail-lh div label {
            width: 28%;
            text-align: right;
            height: 100%;
            display: block;
            float: left;
            font-weight: bold;
            line-height: 32px;
        }
</style>

